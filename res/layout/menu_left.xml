<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="250dp"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:background="#323232">

	<RelativeLayout
		android:layout_height="180dp"
		android:layout_width="match_parent">

		<ImageView
			android:layout_height="90dp"
			android:layout_width="90dp"
			android:background="#818181"
			android:layout_margin="18dp"/>

	</RelativeLayout>

	<Button
		android:layout_height="50dp"
		android:text="个性主题"
		android:layout_width="match_parent"
		style="?android:attr/buttonBarButtonStyle"
		android:textColor="#ABABAB"
		android:gravity="left|center_vertical"
		android:paddingLeft="15dp"
		android:id="@+id/menu_left_button1"/>

	<Button
		android:layout_height="50dp"
		android:text="设置"
		android:layout_width="match_parent"
		style="?android:attr/buttonBarButtonStyle"
		android:textColor="#ABABAB"
		android:gravity="left|center_vertical"
		android:paddingLeft="15dp"
		android:id="@+id/menu_left_button2"/>

	<Button
		android:layout_height="50dp"
		android:text="均衡器"
		android:layout_width="match_parent"
		style="?android:attr/buttonBarButtonStyle"
		android:textColor="#ABABAB"
		android:gravity="left|center_vertical"
		android:paddingLeft="15dp"
		android:id="@+id/menu_left_button3"/>

	<Button
		android:layout_height="50dp"
		android:text="听歌识曲"
		android:layout_width="match_parent"
		style="?android:attr/buttonBarButtonStyle"
		android:textColor="#ABABAB"
		android:gravity="left|center_vertical"
		android:paddingLeft="15dp"
		android:id="@+id/menu_left_button4"/>

	<Button
		android:layout_height="50dp"
		android:text="定时关闭"
		android:layout_width="match_parent"
		style="?android:attr/buttonBarButtonStyle"
		android:textColor="#ABABAB"
		android:gravity="left|center_vertical"
		android:paddingLeft="15dp"
		android:id="@+id/menu_left_button5"/>

	<Button
		android:layout_height="50dp"
		android:text="夜间模式"
		android:layout_width="match_parent"
		style="?android:attr/buttonBarButtonStyle"
		android:textColor="#ABABAB"
		android:gravity="left|center_vertical"
		android:paddingLeft="15dp"
		android:id="@+id/menu_left_button6"/>

	<View
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:layout_weight="1.0"/>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="horizontal">

		<TextView
			android:layout_height="match_parent"
			android:text="。。。"
			android:layout_width="wrap_content"
			android:layout_weight="1"
			style="?android:attr/buttonBarButtonStyle"
			android:textColor="#ABABAB"/>

		<Button
			android:layout_height="50dp"
			android:text="退出"
			android:layout_width="wrap_content"
			style="?android:attr/buttonBarButtonStyle"
			android:textColor="#ABABAB"
			android:paddingLeft="15dp"
			android:layout_weight="1.0"
			android:id="@+id/menu_left_exit"/>

	</LinearLayout>

</LinearLayout>

